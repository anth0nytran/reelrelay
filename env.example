# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Redis (BullMQ)
REDIS_URL=redis://localhost:6379
# Or for Upstash:
# UPSTASH_REDIS_URL=rediss://...

# Cloudflare R2 (S3-compatible)
R2_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=your-access-key
R2_SECRET_ACCESS_KEY=your-secret-key
R2_BUCKET_NAME=atn-social-assets
R2_PUBLIC_URL=https://your-public-bucket-domain.com

# Meta (Facebook/Instagram)
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret

# OpenAI
OPENAI_API_KEY=sk-...
# Set to 'true' to skip LLM calls and use mock captions (saves credits during dev)
USE_MOCK_CAPTIONS=false

# Token Encryption (32 bytes, base64 encoded)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
TOKEN_ENCRYPTION_KEY=your-32-byte-base64-key

# App URL (for callbacks)
NEXT_PUBLIC_APP_URL=http://localhost:3000
